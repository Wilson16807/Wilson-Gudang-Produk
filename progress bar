<body>
  <div class="loader">
    <div class="emoji" id="emoji">ðŸš€</div>
    <div class="loading-text">Membuka scrapbook kenangan...</div>
    <div class="Nama">Wilson Djohan</div>
    <div class="progress w-75 mx-auto">
      <div id="progressBar"
           class="progress-bar progress-bar-striped progress-bar-animated bg-warning"
           role="progressbar" style="width: 0%">0%</div>
    </div>
  </div>

  <script>
    let progress = 0;
    const progressBar = document.getElementById("progressBar");
    const duration = 7500;
    const interval = 300;  
    const step = 200 / (duration / interval);
    const timer = setInterval(() => {
      progress += step;
      if (progress >= 100) {
        progress = 100;
        clearInterval(timer);
        // setelah selesai, redirect ke home.html
        window.location.href = "home.html";
      }
      progressBar.style.width = progress + "%";
      progressBar.innerText = Math.floor(progress) + "%";
    }, interval);

    const emojiEl = document.getElementById("emoji");
    const emojis = ["ðŸš€", "ðŸŒ‘", "ðŸŒŒ"];
    let currentEmoji = 0;

    setInterval(() => {
      currentEmoji = (currentEmoji + 1) % emojis.length;
      emojiEl.textContent = emojis[currentEmoji];
    }, 1000); // match bounce duration (1s)
  </script>
</body>
